<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="aenu.aps3e"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permite que app edite contenido de almacenamiento compartido. -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Permite que app lea contenido de almacenamiento compartido. -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Permite que la aplicación cree sockets de red y utilice protocolos de red personalizados. El navegador y otras aplicaciones proporcionan los medios necesarios para el envío de datos a Internet, por lo que no hace falta utilizar este permiso para eso. -->
    <uses-permission
        android:name="android.permission.INTERNET" />
    <application
        android:label="@string/app_name"
        android:icon="@drawable/app_icon"
        android:name=".Application"
        android:debuggable="true">
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/about"
            android:name="aenu.proptest.HelloJni"
            android:exported="true" />
        <activity
            android:label="@string/key_mappers"
            android:name=".KeyMapActivity"
            android:exported="true" />
        <activity
            android:label="@string/update_log"
            android:name=".UpdateLogActivity"
            android:exported="true" />
        <activity
            android:name=".FileChooser"
            android:exported="true" />
        <activity
            android:label="@string/gratitude"
            android:name=".GratitudeActivity"
            android:exported="true" />
        <activity
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:name=".VirtualPadEdit"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:name=".EmulatorActivity"
            android:exported="false"
            android:process=":emu"
            android:launchMode="singleTask"
            android:screenOrientation="landscape">
            <intent-filter>
                <action
                    android:name="aenu.intent.action.APS3E" />
                <category
                    android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>